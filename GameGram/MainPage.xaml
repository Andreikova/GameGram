<Page
    x:Class="GameGram.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameGram"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- App Header -->
        <Grid Grid.Row="0" Background="#1E1E1E" Padding="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="GameGram" 
                      FontSize="22" 
                      FontWeight="SemiBold" 
                      Foreground="#4DB6AC" 
                      VerticalAlignment="Center"
                      Grid.Column="0"
                      Margin="8,0,0,0"/>

            <StackPanel Orientation="Horizontal" 
                       Grid.Column="2" 
                       HorizontalAlignment="Right">
                <Button Background="Transparent" Margin="5,0">
                    <SymbolIcon Symbol="Add" Foreground="White"/>
                </Button>
                <Button Background="Transparent" Margin="5,0,10,0">
                    <SymbolIcon Symbol="VideoChat" Foreground="White"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <Pivot>
                <PivotItem Header="Feed">
                    <ScrollViewer>
                        <StackPanel>
                            <!-- Stories Section -->
                            <Grid Margin="0,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Gaming Moments" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Margin="12,0,0,8" 
                                           Grid.Row="0"/>

                                <ScrollViewer HorizontalScrollMode="Enabled" 
                                              HorizontalScrollBarVisibility="Hidden" 
                                              Grid.Row="1">
                                    <StackPanel Orientation="Horizontal" Margin="12,0">
                                        <!-- Sample Stories -->
                                        <Button Click="CreateStory_Click" Background="#252525" Width="70" Height="70" CornerRadius="35" Margin="0,0,12,0">
                                            <SymbolIcon Symbol="Add" Foreground="#4DB6AC"/>
                                        </Button>

                                        <Ellipse Width="70" Height="70" Margin="0,0,12,0" StrokeThickness="2" Stroke="#4DB6AC">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="/Assets/story1.jpg"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <Ellipse Width="70" Height="70" Margin="0,0,12,0" StrokeThickness="2" Stroke="#4DB6AC">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="/Assets/story2.jpg"/>
                                            </Ellipse.Fill>
                                        </Ellipse>

                                        <Ellipse Width="70" Height="70" Margin="0,0,12,0" StrokeThickness="2" Stroke="#4DB6AC">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="/Assets/story3.jpg"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>

                            <!-- Posts Section -->
                            <ListView ItemsSource="{x:Bind Posts}" SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="local:PostViewModel">
                                        <Grid Margin="0,8,0,16" Background="#252525" CornerRadius="8">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Post Header -->
                                            <Grid Grid.Row="0" Padding="12,8">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Ellipse Width="32" Height="32" Grid.Column="0">
                                                    <Ellipse.Fill>
                                                        <ImageBrush ImageSource="{x:Bind ProfileImage}"/>
                                                    </Ellipse.Fill>
                                                </Ellipse>

                                                <TextBlock Text="{x:Bind Username}" 
                                                           Grid.Column="1" 
                                                           Margin="8,0,0,0" 
                                                           VerticalAlignment="Center"
                                                           FontWeight="SemiBold"/>

                                                <Button Grid.Column="2" Background="Transparent">
                                                    <SymbolIcon Symbol="More"/>
                                                </Button>
                                            </Grid>

                                            <!-- Post Content -->
                                            <Grid Grid.Row="1">
                                                <Image Source="{x:Bind ImageSource}" 
                                                       Stretch="UniformToFill" 
                                                       MaxHeight="450"/>
                                                <Grid Visibility="{x:Bind IsVideo}" 
                                                      HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center">
                                                    <Ellipse Width="60" Height="60" Fill="#80000000"/>
                                                    <SymbolIcon Symbol="Play" Foreground="White"/>
                                                </Grid>
                                            </Grid>

                                            <!-- Post Actions -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Padding="12,8">
                                                <Button Background="Transparent" Margin="0,0,16,0">
                                                    <SymbolIcon Symbol="Like"/>
                                                </Button>
                                                <Button Background="Transparent" Margin="0,0,16,0">
                                                    <SymbolIcon Symbol="Comment"/>
                                                </Button>
                                                <Button Background="Transparent">
                                                    <SymbolIcon Symbol="Share"/>
                                                </Button>
                                            </StackPanel>

                                            <!-- Post Description -->
                                            <StackPanel Grid.Row="3" Padding="12,0,12,12">
                                                <TextBlock Text="{x:Bind LikesCount}" 
                                                           FontWeight="SemiBold" 
                                                           Margin="0,0,0,4"/>
                                                <TextBlock Text="{x:Bind Description}" 
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{x:Bind TimePosted}" 
                                                           Foreground="Gray" 
                                                           FontSize="12" 
                                                           Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </ScrollViewer>
                </PivotItem>

                <PivotItem Header="Discover">
                    <Grid>
                        <TextBlock Text="Discover gaming content" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   FontSize="18" 
                                   Foreground="Gray"/>
                    </Grid>
                </PivotItem>

                <PivotItem Header="Create">
                    <Grid>
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Create New Post" 
                                       FontSize="22" 
                                       HorizontalAlignment="Center" 
                                       Margin="0,0,0,24"/>

                            <Grid Width="300" Height="300" Background="#252525" Margin="0,0,0,24">
                                <SymbolIcon Symbol="Upload" 
                                            Width="64" 
                                            Height="64" 
                                            Foreground="#4DB6AC"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Photo" 
                                        Width="120" 
                                        Margin="0,0,16,0" 
                                        Background="#4DB6AC" 
                                        Foreground="White"/>
                                <Button Content="Video" 
                                        Width="120" 
                                        Background="#252525" 
                                        Foreground="White"/>
                            </StackPanel>

                            <TextBox PlaceholderText="Add a description..." 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap" 
                                     Height="100" 
                                     Margin="0,24,0,0"/>

                            <Button Content="Post" 
                                    Width="240" 
                                    Margin="0,24,0,0" 
                                    HorizontalAlignment="Center" 
                                    Background="#4DB6AC" 
                                    Foreground="White"/>
                        </StackPanel>
                    </Grid>
                </PivotItem>
            </Pivot>
        </Grid>
    </Grid>
</Page>