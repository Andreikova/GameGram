<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GameGram"
             xmlns:models="clr-namespace:GameGram.Models"
             x:Class="GameGram.MainPage"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*,Auto,*"
              RowSpacing="15"
              Padding="15">

            <!-- Header -->
            <Label Grid.Row="0" 
                   Text="GameGram" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <!-- Stories Section -->
            <StackLayout Grid.Row="1" Orientation="Horizontal">
                <Label Text="Stories" 
                       FontSize="24" 
                       VerticalOptions="Center" 
                       HorizontalOptions="Start" />
                <Button Text="Photo" 
                        Clicked="OnAddPhotoStoryClicked" 
                        HorizontalOptions="EndAndExpand"
                        Margin="5,0" />
                <Button Text="Video" 
                        Clicked="OnAddVideoStoryClicked"
                        Margin="5,0" />
            </StackLayout>

            <CollectionView x:Name="StoriesCollectionView" 
                            Grid.Row="2"
                            ItemsLayout="HorizontalList"
                            HeightRequest="150">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray"
                               CornerRadius="10"
                               Padding="10"
                               Margin="5"
                               WidthRequest="120">
                            <Grid RowDefinitions="*,Auto,Auto">
                                <Image Grid.Row="0"
                                       Source="{Binding pathToFile}"
                                       Aspect="AspectFill"
                                       HeightRequest="80" />
                                <Label Grid.Row="1"
                                       Text="{Binding GetType, StringFormat='{0}'}"
                                       FontSize="12"
                                       Margin="0,5,0,0" />
                                <Button Grid.Row="2"
                                        Text="♥"
                                        FontSize="18"
                                        HeightRequest="30"
                                        WidthRequest="30"
                                        HorizontalOptions="Start"
                                        BackgroundColor="{Binding isLiked, Converter={StaticResource BoolToColorConverter}}"
                                        Clicked="OnStoryLiked" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No stories yet. Add one!" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray"/>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Posts Section -->
            <StackLayout Grid.Row="3" Orientation="Horizontal">
                <Label Text="Posts" 
                       FontSize="24" 
                       VerticalOptions="Center" 
                       HorizontalOptions="Start" />
                <Button Text="Photo" 
                        Clicked="OnAddPhotoPostClicked" 
                        HorizontalOptions="EndAndExpand"
                        Margin="5,0" />
                <Button Text="Video" 
                        Clicked="OnAddVideoPostClicked"
                        Margin="5,0" />
            </StackLayout>

            <CollectionView x:Name="PostsCollectionView" 
                            Grid.Row="4">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray"
                               CornerRadius="10"
                               Margin="0,5"
                               Padding="15">
                            <Grid RowDefinitions="Auto,*,Auto,Auto" 
                                  ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0" 
                                       Grid.Column="0"
                                       Text="{Binding GetType, StringFormat='{0}'}"
                                       FontAttributes="Bold" />
                                <Image Grid.Row="1" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Source="{Binding pathToFile}"
                                       HeightRequest="200"
                                       Margin="0,10" 
                                       Aspect="AspectFill"/>
                                <Label Grid.Row="2" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding description}"
                                       Margin="0,5" />
                                <Button Grid.Row="3" 
                                        Grid.Column="0"
                                        Text="♥" 
                                        FontSize="18"
                                        HeightRequest="40"
                                        WidthRequest="40"
                                        HorizontalOptions="Start"
                                        BackgroundColor="{Binding isLiked, Converter={StaticResource BoolToColorConverter}}"
                                        Clicked="OnPostLiked" />
                                <Label Grid.Row="3" 
                                       Grid.Column="1"
                                       Text="Add comment..." 
                                       VerticalOptions="Center"
                                       TextColor="Gray"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label Text="No posts yet. Add one!" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="Gray"/>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </ScrollView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>