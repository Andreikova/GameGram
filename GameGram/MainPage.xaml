<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GameGram"
             xmlns:models="clr-namespace:GameGram.Models"
             x:Class="GameGram.MainPage"
             BackgroundColor="#121212">

    <Shell.TitleView>
        <Grid>
            <Label Text="GAMEGRAM" 
                   TextColor="#7B36F0" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   FontFamily="Monospace"
                   HorizontalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*,Auto,*"
              RowSpacing="15"
              Padding="15">

            <!-- Header with Gaming Theme -->
            <Border Grid.Row="0" 
                   BackgroundColor="#1E1E1E"
                   Padding="15">
                <StackLayout Orientation="Horizontal">
                    <Label Text="GAME" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#ffffff" />
                    <Label Text="GRAM" 
                           FontSize="28" 
                           FontAttributes="Bold"
                           TextColor="#7B36F0" />
                    <Label Text="LVL 42" 
                           FontSize="16"
                           TextColor="#4AFFDE"
                           VerticalOptions="Center"
                           HorizontalOptions="EndAndExpand"
                           Margin="0,0,10,0"/>
                    <Frame BackgroundColor="#4AFFDE" 
                           CornerRadius="20" 
                           HeightRequest="40" 
                           WidthRequest="40" 
                           Padding="0">
                        <Label Text="+" 
                               FontSize="24" 
                               TextColor="#121212" 
                               HorizontalOptions="Center" 
                               VerticalOptions="Center"/>
                    </Frame>
                </StackLayout>
            </Border>

            <!-- Stories Section -->
            <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto">
                <Label Grid.Column="0"
                       Text="STORIES" 
                       FontSize="22" 
                       FontAttributes="Bold"
                       TextColor="#4AFFDE" 
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="📷" 
                        FontSize="18"
                        BackgroundColor="#7B36F0"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        WidthRequest="45"
                        Clicked="OnAddPhotoStoryClicked" 
                        Margin="5,0" />
                <Button Grid.Column="2"
                        Text="🎬" 
                        FontSize="18"
                        BackgroundColor="#7B36F0"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        WidthRequest="45"
                        Clicked="OnAddVideoStoryClicked"/>
            </Grid>

            <CollectionView x:Name="StoriesCollectionView" 
                            Grid.Row="2"
                            ItemsLayout="HorizontalList"
                            HeightRequest="180">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#7B36F0"
                               BackgroundColor="#1E1E1E"
                               CornerRadius="15"
                               Padding="3"
                               Margin="5"
                               WidthRequest="140">
                            <Grid RowDefinitions="*, Auto">
                                <Frame Grid.Row="0"
                                       HasShadow="False"
                                       BorderColor="Transparent"
                                       BackgroundColor="#2D2D2D"
                                       CornerRadius="12"
                                       Padding="0">
                                    <Grid>
                                        <Image Source="{Binding pathToFile}"
                                               Aspect="AspectFill" />
                                        <BoxView Color="#80000000" 
                                                 VerticalOptions="End"
                                                 HeightRequest="40"/>
                                        <Label Text="{Binding GetType, StringFormat='{0}'}" 
                                               TextColor="White"
                                               FontSize="12"
                                               VerticalOptions="End"
                                               Margin="8"/>
                                    </Grid>
                                </Frame>
                                <Grid Grid.Row="1" 
                                      ColumnDefinitions="Auto,*,Auto" 
                                      Margin="5">
                                    <Button Grid.Column="0"
                                            Text="♥"
                                            FontSize="18"
                                            CornerRadius="15"
                                            HeightRequest="30"
                                            WidthRequest="30"
                                            Padding="0"
                                            BackgroundColor="{Binding isLiked, Converter={StaticResource BoolToColorConverter}}"
                                            Clicked="OnStoryLiked" />
                                    <Label Grid.Column="2"
                                           Text="{Binding timer, StringFormat='{0}s'}"
                                           TextColor="#4AFFDE"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Grid BackgroundColor="#1E1E1E" 
                          HeightRequest="160">
                        <StackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center">
                            <Label Text="NO STORIES YET" 
                                   TextColor="#7B36F0"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="Add your first gaming moment!" 
                                   TextColor="Gray"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Grid>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Posts Section -->
            <Grid Grid.Row="3" ColumnDefinitions="*,Auto,Auto">
                <Label Grid.Column="0"
                       Text="FEED" 
                       FontSize="22" 
                       FontAttributes="Bold"
                       TextColor="#4AFFDE" 
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="📷" 
                        FontSize="18"
                        BackgroundColor="#7B36F0"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        WidthRequest="45"
                        Clicked="OnAddPhotoPostClicked" 
                        Margin="5,0" />
                <Button Grid.Column="2"
                        Text="🎬" 
                        FontSize="18"
                        BackgroundColor="#7B36F0"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        WidthRequest="45"
                        Clicked="OnAddVideoPostClicked"/>
            </Grid>

            <CollectionView x:Name="PostsCollectionView" 
                            Grid.Row="4">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#7B36F0"
                               BackgroundColor="#1E1E1E"
                               CornerRadius="15"
                               Margin="0,8"
                               Padding="3">
                            <Grid RowDefinitions="Auto,*,Auto,Auto" 
                                  ColumnDefinitions="*,Auto">
                                <!-- Header -->
                                <Grid Grid.Row="0" 
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      ColumnDefinitions="Auto,*,Auto"
                                      Margin="10,5">
                                    <Frame Grid.Column="0"
                                           BackgroundColor="#7B36F0"
                                           CornerRadius="20"
                                           HeightRequest="40"
                                           WidthRequest="40"
                                           Padding="0">
                                        <Label Text="G"
                                               TextColor="White"
                                               FontAttributes="Bold"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>
                                    <StackLayout Grid.Column="1" 
                                                 Margin="10,0">
                                        <Label Text="Gamer42" 
                                               TextColor="White"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding GetType, StringFormat='{0}'}"
                                               TextColor="Gray"
                                               FontSize="12"/>
                                    </StackLayout>
                                    <Label Grid.Column="2"
                                           Text="⋮"
                                           TextColor="White"
                                           FontSize="20"
                                           VerticalOptions="Center"/>
                                </Grid>

                                <!-- Content -->
                                <Frame Grid.Row="1" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       BackgroundColor="#2D2D2D"
                                       BorderColor="Transparent"
                                       CornerRadius="10"
                                       Padding="0"
                                       Margin="5">
                                    <Image Source="{Binding pathToFile}"
                                           Aspect="AspectFill"
                                           HeightRequest="220"/>
                                </Frame>

                                <!-- Description -->
                                <Label Grid.Row="2" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="{Binding description}"
                                       TextColor="White"
                                       Margin="10,5" />

                                <!-- Interaction Bar -->
                                <Grid Grid.Row="3" 
                                      Grid.Column="0"
                                      Grid.ColumnSpan="2"
                                      ColumnDefinitions="Auto,Auto,*,Auto"
                                      Margin="5">
                                    <Button Grid.Column="0"
                                            Text="♥" 
                                            FontSize="18"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            Padding="0"
                                            BackgroundColor="{Binding isLiked, Converter={StaticResource BoolToColorConverter}}"
                                            Clicked="OnPostLiked" 
                                            Margin="5,0"/>
                                    <Button Grid.Column="1"
                                            Text="💬" 
                                            FontSize="18"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            Padding="0"
                                            BackgroundColor="#2D2D2D"
                                            Margin="5,0"/>
                                    <Button Grid.Column="3"
                                            Text="🔖" 
                                            FontSize="18"
                                            CornerRadius="20"
                                            HeightRequest="40"
                                            WidthRequest="40"
                                            Padding="0"
                                            BackgroundColor="#2D2D2D"
                                            Margin="5,0"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Grid BackgroundColor="#1E1E1E" 
                          HeightRequest="200">
                        <StackLayout VerticalOptions="Center" 
                                     HorizontalOptions="Center">
                            <Label Text="NO POSTS YET" 
                                   TextColor="#7B36F0"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="Share your epic gaming moments!" 
                                   TextColor="Gray"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                    </Grid>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Bottom Tab Bar -->
            <Frame Grid.Row="5"
                   BackgroundColor="#1E1E1E"
                   BorderColor="#7B36F0"
                   CornerRadius="25"
                   Margin="10,20,10,5"
                   Padding="5"
                   HeightRequest="70"
                   VerticalOptions="End">
                <Grid ColumnDefinitions="*,*,*,*,*">
                    <Button Grid.Column="0"
                            Text="🏠"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="#7B36F0"/>
                    <Button Grid.Column="1"
                            Text="🔍"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="Gray"/>
                    <Button Grid.Column="2"
                            Text="➕"
                            FontSize="24"
                            BackgroundColor="#4AFFDE"
                            TextColor="Black"
                            CornerRadius="20"
                            HeightRequest="50"
                            WidthRequest="50"
                            Margin="10,0"
                            VerticalOptions="Center"
                            HorizontalOptions="Center"/>
                    <Button Grid.Column="3"
                            Text="🎮"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="Gray"/>
                    <Button Grid.Column="4"
                            Text="👤"
                            FontSize="20"
                            BackgroundColor="Transparent"
                            TextColor="Gray"/>
                </Grid>
            </Frame>
        </Grid>
    </ScrollView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToColorConverter x:Key="BoolToColorConverter" TrueColor="#FF366C" FalseColor="#2D2D2D"/>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>